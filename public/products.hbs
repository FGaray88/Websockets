
<table style="margin:auto;color: white;">
    <tr style=" background-color: rgb(29, 48, 48); ">
        <td>Nombre</td>
        <td>Precio</td>
        <td>Foto</td>
    </tr>
    {{#each products}}
        <tr style=" background-color: darkslategrey; ">
            <td style="width: 500px;">{{this.nombre}}</td>
            <td style="width: 200px;">AR${{this.precio}}</td>
            <td ><img src={{this.picture}} alt={{this.id}} style="width: 50px; min-height: 100%; max-height: 50px; border-radius: 25px"></td>
        </tr>
    {{/each}}
</table>